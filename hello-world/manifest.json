{
  "manifest_version": 3,
  "name": "Hello World Extension",
  "version": "1.0",
  "description": "Показывает 'Hello World' при клике на иконку.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "permissions": ["activeTab"],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
